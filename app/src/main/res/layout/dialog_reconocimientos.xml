<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eduko_dialog_round"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp">

    <ImageView
        android:id="@+id/ivReconocimientosCerrar"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_gravity="end"
        android:contentDescription="@string/app_name"
        android:src="@drawable/eduko_reconocimientos_cerrar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivReconocimientos"
            android:layout_width="@dimen/_72sdp"
            android:layout_height="@dimen/_72sdp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/eduko_reconocimiento_dialog" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTextoReconocimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:gravity="center"
                android:text="@string/tvReconocimiento"
                android:textColor="#3B0012"
                android:textSize="@dimen/_24sdpt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvtextoObtenido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asignado el "
                    android:textColor="#3b0012"
                    android:textSize="@dimen/_14sdpt" />

                <TextView
                    android:id="@+id/tvObtenidoReconocimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:ems="10"
                    android:text="Obtenido"
                    android:textColor="#3b0012"
                    android:textSize="@dimen/_14sdpt"
                    android:layout_marginStart="@dimen/_8sdp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDescripcionReconocimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Once installed, the laravel new command will create a fresh Laravel installation in the directory you specify. For instance, laravel new blog will create a directory named blog containing a fresh Laravel installation with all of Laravel's dependencies already installed"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/_14sdpt" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>