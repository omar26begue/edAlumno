<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/eduko_dialog_round"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp">

    <ImageView
        android:id="@+id/ivTareasCerrar"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_gravity="end"
        android:contentDescription="@string/app_name"
        android:src="@drawable/eduko_reconocimientos_cerrar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_72sdp"
            android:layout_height="@dimen/_72sdp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/eduko_tareas_max" />

        <TextView
            android:id="@+id/tvAsignaturasTareas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_29sdp"
            android:gravity="center"
            android:text="Asignaturas"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/_14sdpt" />

        <TextView
            android:id="@+id/tvAsignaturaNombreTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            android:text="Tareas"
            android:textAlignment="center"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/_24sdpt" />

        <TextView
            android:id="@+id/tvPuntosAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="4 Puntos"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#02B2D9"
            android:textSize="@dimen/_14sdpt" />

        <TextView
            android:id="@+id/tvDescripcionTareas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_17sdp"
            android:text="Once installed, the laravel new command will create a fresh Laravel installation in the directory you specify."
            android:textAllCaps="false"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/_14sdpt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de entrega:"
                android:textAllCaps="false"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/_14sdpt" />

            <TextView
                android:id="@+id/tvFechaEntrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:text="26/01/2018"
                android:textAllCaps="false"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/_14sdpt"
                android:layout_marginStart="@dimen/_16sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFechaResuelta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvFechaTextoResuelta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resuelta:"
                android:textAllCaps="false"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/_14sdpt" />

            <TextView
                android:id="@+id/tvFechaResuelta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:text="26/01/2018"
                android:textAllCaps="false"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/_14sdpt"
                android:layout_marginStart="@dimen/_16sdp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:gravity="end"
            android:text="@string/btnAceptar"
            android:textAllCaps="true"
            android:textColor="#019DC0"
            android:textSize="@dimen/_18sdpt"
            android:layout_marginEnd="@dimen/_8sdp" />

    </LinearLayout>

</FrameLayout>