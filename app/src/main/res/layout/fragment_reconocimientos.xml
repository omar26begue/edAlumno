<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.idoogroup.edalumno.Fragments.ReconocimientosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/eduko_reconocimiento" />

        <TextView
            android:id="@+id/tvReconocimientos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center"
            android:text="@string/tvReconocimientos"
            android:textAllCaps="true"
            android:textColor="#D41B55"
            android:textSize="@dimen/_18sdpt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_42sdp"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tlReconocimientos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                app:tabGravity="fill"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabMode="fixed" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpReconocimientos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.85" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
