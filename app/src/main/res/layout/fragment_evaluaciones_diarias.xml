<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_tab_evaluaciones"
    tools:context="com.idoogroup.edalumno.Fragments.FragmentEvaluaciones.EvaluacionesDiariasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEvaluacionesDiarias"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tvDiarias"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdpt" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:background="@drawable/eduko_back_fecha"
                    android:text="Fecha"
                    android:textAllCaps="false"
                    android:textColor="#bb000000"
                    android:textSize="@dimen/_12sdpt"
                    android:layout_marginEnd="@dimen/_16sdp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llAsignaturas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/eduko_back_fecha"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAsignatura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todas"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="@dimen/_12sdpt" />

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/eduko_abajo" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPuntosInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_48sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:background="@drawable/eduko_back_fecha"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_48sdp"
                android:layout_marginEnd="@dimen/_16sdp">

                <TextView
                    android:id="@+id/tvPuntosInicial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 ptos"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="@dimen/_12sdpt" />

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/eduko_abajo" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPuntosFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/eduko_back_fecha"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPuntosFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 ptos"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="@dimen/_12sdpt" />

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/eduko_abajo" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEvaluacionesDiarias"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/tvNoDatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="@string/tvNoDatos"
                android:textColor="#FFF"
                android:textSize="@dimen/_14sdpt"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
