<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp">

        <LinearLayout
            android:id="@+id/llCategorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/eduko_back_categoria_servicio_unselect"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCategoriaUnSelect"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:contentDescription="@string/app_name"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_8sdp"
                android:src="@drawable/eduko_unselect"
                android:layout_marginEnd="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/ivCategoriaSelect"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:layout_marginRight="@dimen/_8sdp"
                android:src="@drawable/eduko_select"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_8sdp" />

            <TextView
                android:id="@+id/tvNombreCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Categoria"
                android:textAllCaps="false"
                android:textColor="#019DC0"
                android:textSize="@dimen/_18sdpt" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>