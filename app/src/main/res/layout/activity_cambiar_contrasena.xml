<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/back_pink"
    android:baselineAligned="false"
    android:layout_height="match_parent"
    tools:context="com.idoogroup.edalumno.CambiarContrasenaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCambiarContrasena"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="@dimen/_72sdp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/app_name"
                android:src="@drawable/eduko_cambiar_contrasena" />

            <TextView
                android:id="@+id/tvCambiarContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="center"
                android:text="@string/tvCambiarContrasena"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="@dimen/_14sdpt" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilContrasenaActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal"
                android:textColorHint="#FFFFFF"
                app:hintTextAppearance="@style/edukoHintText"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#FFFFFF">

                <EditText
                    android:id="@+id/etContrasenaActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:drawableStart="@drawable/eduko_contrasena"
                    android:drawableLeft="@drawable/eduko_contrasena"
                    android:drawablePadding="@dimen/_9sdp"
                    android:ems="10"
                    android:hint="@string/etContrasena"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:shadowColor="#FFF"
                    android:singleLine="true"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#FFF"
                    android:textColorHint="#FFF"
                    android:textColorLink="#FFF"
                    android:textSize="@dimen/_14sdpt"
                    android:importantForAutofill="no" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="#FFFFFF" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilContrasenaNueva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal"
                android:textColorHint="#FFFFFF"
                app:hintTextAppearance="@style/edukoHintText"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#FFFFFF">

                <EditText
                    android:id="@+id/etContrasenaNueva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:drawableStart="@drawable/eduko_contrasena"
                    android:drawableLeft="@drawable/eduko_contrasena"
                    android:drawablePadding="@dimen/_9sdp"
                    android:ems="10"
                    android:hint="@string/etContrasenaNueva"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdpt"
                    android:importantForAutofill="no" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilContrasenaConfirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal"
                android:textColorHint="#FFFFFF"
                app:hintTextAppearance="@style/edukoHintText"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#FFFFFF">

                <EditText
                    android:id="@+id/etContrasenaConfirmar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:drawableStart="@drawable/eduko_contrasena"
                    android:drawableLeft="@drawable/eduko_contrasena"
                    android:drawablePadding="@dimen/_9sdp"
                    android:ems="10"
                    android:hint="@string/etContrasenaNueva"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdpt"
                    android:importantForAutofill="no" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvCambiar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/buton_back_background"
                android:gravity="center_horizontal|center"
                android:onClick="cambiarContrasena"
                android:text="@string/btnCambiar"
                android:textAllCaps="false"
                android:textColor="#D7275E"
                android:textSize="@dimen/_18sdpt" />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/ivBackBack"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/_16sdp"
        android:contentDescription="@string/app_name"
        android:onClick="volverAtrasContrasena"
        android:src="@drawable/eduko_back_back" />

    <ImageView
        android:id="@+id/ibBackPink"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_gravity="start"
        android:contentDescription="@string/app_name"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:onClick="volverAtrasContrasena"
        android:src="@drawable/eduko_back_pink"
        android:layout_marginStart="@dimen/_15sdp" />

</FrameLayout>
