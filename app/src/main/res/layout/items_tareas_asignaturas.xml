<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreTarea"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Tareas 1"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/_18sdpt" />

            <TextView
                android:id="@+id/tvPuntosTarea"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:text="Puntos 4"
                android:textColor="#02B2D9"
                android:textSize="@dimen/_12sdpt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivTareaVerificada"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:contentDescription="@string/app_name"
                android:src="@drawable/eduko_tarea_verificada"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivTareaNoVerificada"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:contentDescription="@string/app_name"
                android:src="@drawable/eduko_tarea_noverificada"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivTareaRealizada"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:contentDescription="@string/app_name"
                android:src="@drawable/eduko_tareas_realizadas"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivTareasDetalles"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/eduko_tareas_opciones" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/vSeparadorAsignaturas"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:alpha="0.25"
        android:background="#BFBFBF" />

</LinearLayout>